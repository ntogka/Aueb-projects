<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.BuzzerActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="134dp"
            android:layout_height="57dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="125dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_toLeftOf="@+id/editText10"
                android:text="Reservation ID"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/editText2"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="57dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="ΑΝΑΖΗΤΗΣΗ ΚΡΑΤΗΣΗΣ"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text=" \n\nΑποτελέσματα"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0a00cc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:fontFamily="serif"
        android:text=""
        android:scrollbars = "vertical"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="ΕΠΙΒΕΒΑΙΩΣΗ ΚΡΑΤΗΣΗΣ"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="75dp"
        android:visibility="invisible"/>

</LinearLayout>